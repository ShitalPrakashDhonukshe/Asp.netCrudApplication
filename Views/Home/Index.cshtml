@{
    ViewData["Title"] = "Index";
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.pager != null)
    {
        pager = ViewBag.pager;
        pageNo = pager.CurrentPage;
    }
}

<div class="container">
    @if (pager.TotalPages > 0)
    {
     <ul class=" pagination justify-content-end">

         @for(var pge=pager.StartPage;pge<=pager.EndPage;pge++)
            {
                         <li class="page-item @(pge==pager.CurrentPage?"active":"")">
                             <a class=" page-link" asp-controller="ProductMaster" asp-action="Index"asp-route-pg="@pge"> @pge</a>
                         </li>


            }
            @if (pager.CurrentPage < pager.TotalPages)
            {
                <li class="page-item">
                    <a class=" page-link" asp-controller="ProductMaster" asp-action="Index" asp-route-pg="@(pager.CurrentPage+1)">Next</a>
                    <a class=" page-link" asp-controller="ProductMaster" asp-action="Index" asp-route-pg="@(pager.CurrentPage+1)">Last</a>
                </li>
            }

          

     </ul>   
    }
</div>

